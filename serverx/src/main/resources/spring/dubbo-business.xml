<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:config.properties"/>
    </bean>

    <dubbo:application name="dubbo-tx-test"  />
    <dubbo:registry address="$[dubbo.registry.address]" />

    <bean id="dubbotx" class="org.windwant.serverx.service.impl.DubboTXBusiServiceImpl">
        <property name="dubboTXServicex" ref="serverx"/>
        <property name="dubboTXServicey" ref="servery"/>
    </bean>

    <dubbo:reference id="serverx" check="false" interface="org.windwant.common.api.DubboTXServicex"/>
    <dubbo:reference id="servery" check="false" interface="org.windwant.common.api.DubboTXServicey"/>

    <bean class="com.alibaba.fescar.spring.annotation.GlobalTransactionScanner">
        <constructor-arg value="dubbo-tx-test"/>
        <constructor-arg value="dubbo_service_tx_group"/>
    </bean>

</beans>